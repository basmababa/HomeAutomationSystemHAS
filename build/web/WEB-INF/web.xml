<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>login_submit</servlet-name>
        <servlet-class>servlet.login_submit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>asyncOnOff</servlet-name>
        <servlet-class>servlet.asyncOnOff</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registerServlet</servlet-name>
        <servlet-class>servlet.registerServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>nameRetrieval</servlet-name>
        <servlet-class>servlet.nameRetrieval</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>asyncDeviceOperations</servlet-name>
        <servlet-class>servlet.asyncDeviceOperations</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>camera</servlet-name>
        <servlet-class>servlet.camera</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tv</servlet-name>
        <servlet-class>servlet.tv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login_submit</servlet-name>
        <url-pattern>/login_submit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>asyncOnOff</servlet-name>
        <url-pattern>/asyncOnOff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registerServlet</servlet-name>
        <url-pattern>/registerServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>nameRetrieval</servlet-name>
        <url-pattern>/nameRetrieval</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>asyncDeviceOperations</servlet-name>
        <url-pattern>/asyncDeviceOperations</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>camera</servlet-name>
        <url-pattern>/camera</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tv</servlet-name>
        <url-pattern>/tv</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
